#include <iostream>
using namespace std;

const int MAX = 100;

void turn90(int mat[MAX][MAX], int& row, int& col);

int main() {
    int r, s;
    cout << "Enter number rows: ";
    cin >> r;
    cout << "Enter number cols: ";
    cin >> s;

    int matrix[MAX][MAX];

    for (int i = 0; i < r; ++i) {
        cout << "Enter element row " << i + 1 << ": ";
        for (int j = 0; j < s; ++j) {
            cin >> matrix[i][j];
        }
    }
    cout << "start matrix:" << endl;
    for (int i = 0; i < r; ++i) {
        for (int j = 0; j < s; ++j) {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }

    // Застосовуємо функцію повороту
    turn90(matrix, r, s);

    cout << "matrix after turn 90:" << endl;
    for (int i = 0; i < s; ++i) {
        for (int j = 0; j < r; ++j) {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
void turn90(int mat[MAX][MAX], int& row, int& col) {
    int timemat[MAX][MAX];

    // Поворот матриці
    for (int i = 0; i < row; ++i) {
        for (int j = 0; j < col; ++j) {
            timemat[col - 1 - j][i] = mat[i][j]; 
        }
    }

    // Копіюємо результат повороту назад в оригінальну матрицю
    for (int i = 0; i < col; ++i) {
        for (int j = 0; j < row; ++j) {
            mat[i][j] = timemat[i][j];
        }
    }

    // Змінюємо розмірності матриці
    swap(row, col);
}
